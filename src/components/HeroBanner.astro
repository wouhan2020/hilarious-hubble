---
type Props = {
	heading?: string;
	subtitle?: string;
};

const {
	heading = 'Bienvenue dans un petit monde doux.',
	subtitle = "Un espace pour collectionner l’étrange, le joli, et l’inattendu — entre coquilles et curiosités.",
} = Astro.props;
---

<section class="hero" aria-label="Bannière">
	<div class="heroMedia" role="img" aria-label="Photo de nature (placeholder)">
		<svg viewBox="0 0 1200 520" preserveAspectRatio="xMidYMid slice">
			<defs>
				<linearGradient id="g" x1="0" y1="0" x2="1" y2="1">
					<stop offset="0" stop-color="#82b89e" />
					<stop offset="0.55" stop-color="#c8e0d2" />
					<stop offset="1" stop-color="#f3c6b3" />
				</linearGradient>
				<filter id="n" x="-20%" y="-20%" width="140%" height="140%">
					<feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="2" stitchTiles="stitch" />
					<feColorMatrix type="saturate" values="0.2" />
					<feComponentTransfer>
						<feFuncA type="table" tableValues="0 0.18" />
					</feComponentTransfer>
				</filter>
			</defs>
			<rect width="1200" height="520" fill="url(#g)" />
			<rect width="1200" height="520" filter="url(#n)" />
			<g opacity="0.22" fill="#2f3a2f">
				<circle cx="260" cy="260" r="130" />
				<circle cx="440" cy="210" r="90" />
				<circle cx="980" cy="250" r="160" />
				<circle cx="860" cy="210" r="110" />
			</g>
		</svg>
	</div>

	<div class="heroCard">
		<span class="pill">
			<span class="spark" aria-hidden="true">✶</span>
			<span>{heading}</span>
		</span>
		<p class="heroText">{subtitle}</p>
	</div>
</section>

<style>
	.hero {
		margin-top: 10px;
	}

	.heroMedia {
		border-radius: 18px;
		overflow: hidden;
		border: 1px solid rgba(59, 43, 42, 0.14);
		box-shadow: 0 10px 25px rgba(59, 43, 42, 0.1);
	}

	.heroMedia svg {
		display: block;
		width: 100%;
		height: auto;
		aspect-ratio: 1200 / 520;
	}

	.heroCard {
		display: grid;
		place-items: center;
		text-align: center;
		padding: 16px 0 0;
	}

	.heroText {
		margin: 10px 0 0;
		max-width: 56ch;
		color: rgba(59, 43, 42, 0.72);
		font-size: 15px;
	}

	.spark {
		color: rgba(229, 127, 132, 0.95);
	}
</style>


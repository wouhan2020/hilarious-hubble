---
const nav = [
	{ href: '#', label: 'Accueil' },
	{ href: '#', label: 'Blog' },
	{ href: '#', label: 'Photos' },
	{ href: '#', label: 'Boutique' },
	{ href: '#', label: 'À propos' },
	{ href: '#', label: 'Contact' },
];
---

<header class="header">
	<div class="headerDecor left" aria-hidden="true">
		<svg viewBox="0 0 240 120" role="presentation">
			<g fill="none" stroke="rgba(59, 43, 42, 0.22)" stroke-width="2" stroke-linecap="round">
				<path d="M25 92c22-20 38-45 56-68 9-11 23-16 36-6 12 10 6 26-3 37-20 25-49 34-78 37Z" />
				<path d="M88 92c12-16 26-31 44-40 14-7 31-8 44 2 18 14 9 39-15 46-30 9-55-2-73-8Z" />
				<path d="M65 37c-10-14-26-21-44-23" />
				<path d="M123 26c10-10 24-16 42-17" />
			</g>
			<g fill="#e57f84" opacity="0.85">
				<circle cx="46" cy="36" r="8" />
				<circle cx="132" cy="32" r="7" />
				<circle cx="90" cy="60" r="6" />
			</g>
			<g fill="#88b5a2" opacity="0.8">
				<circle cx="24" cy="22" r="6" />
				<circle cx="162" cy="44" r="6" />
				<circle cx="200" cy="22" r="6" />
			</g>
		</svg>
	</div>

	<div class="headerCenter">
		<p class="microNav">
			<a href="#" class="microLink">Home</a>
			<span class="dot" aria-hidden="true">•</span>
			<a href="#" class="microLink">Archives</a>
		</p>

		<h1 class="brand">
			<span class="brandTop">DOG IN A SHELL</span>
			<span class="brandSub">Coquilles et Curiosités</span>
		</h1>

		<nav class="nav" aria-label="Navigation principale">
			{nav.map((item) => (
				<a class="navLink" href={item.href}>{item.label}</a>
			))}
		</nav>
	</div>

	<div class="headerDecor right" aria-hidden="true">
		<svg viewBox="0 0 240 120" role="presentation">
			<g fill="none" stroke="rgba(59, 43, 42, 0.22)" stroke-width="2" stroke-linecap="round">
				<path d="M25 92c22-20 38-45 56-68 9-11 23-16 36-6 12 10 6 26-3 37-20 25-49 34-78 37Z" />
				<path d="M88 92c12-16 26-31 44-40 14-7 31-8 44 2 18 14 9 39-15 46-30 9-55-2-73-8Z" />
				<path d="M65 37c-10-14-26-21-44-23" />
				<path d="M123 26c10-10 24-16 42-17" />
			</g>
			<g fill="#e57f84" opacity="0.85">
				<circle cx="46" cy="36" r="8" />
				<circle cx="132" cy="32" r="7" />
				<circle cx="90" cy="60" r="6" />
			</g>
			<g fill="#88b5a2" opacity="0.8">
				<circle cx="24" cy="22" r="6" />
				<circle cx="162" cy="44" r="6" />
				<circle cx="200" cy="22" r="6" />
			</g>
		</svg>
	</div>
</header>

<style>
	.header {
		position: relative;
		padding: 18px 12px 10px;
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: start;
		gap: 12px;
	}

	.headerCenter {
		text-align: center;
		padding: 0 8px;
	}

	.microNav {
		margin: 0 0 10px;
		font-size: 12px;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: rgba(59, 43, 42, 0.55);
	}

	.microLink {
		color: inherit;
	}

	.microLink:hover {
		color: rgba(59, 43, 42, 0.82);
	}

	.dot {
		margin: 0 8px;
		opacity: 0.7;
	}

	.brand {
		margin: 0;
		line-height: 1.05;
	}

	.brandTop {
		display: block;
		font-family: Fraunces, ui-serif, Georgia, serif;
		font-weight: 800;
		font-size: clamp(34px, 4.2vw, 52px);
		letter-spacing: 0.04em;
		color: rgba(59, 43, 42, 0.9);
	}

	.brandSub {
		display: block;
		margin-top: 6px;
		font-weight: 700;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		font-size: 12px;
		color: rgba(59, 43, 42, 0.6);
	}

	.nav {
		margin-top: 14px;
		display: flex;
		justify-content: center;
		gap: 14px;
		flex-wrap: wrap;
	}

	.navLink {
		padding: 8px 10px;
		border-radius: 999px;
		font-weight: 700;
		font-size: 13px;
		color: rgba(59, 43, 42, 0.75);
		background: rgba(255, 255, 255, 0.32);
		border: 1px solid rgba(59, 43, 42, 0.1);
		transition:
			background 160ms ease,
			color 160ms ease,
			transform 160ms ease;
	}

	.navLink:hover {
		background: rgba(255, 255, 255, 0.55);
		color: rgba(59, 43, 42, 0.92);
		transform: translateY(-1px);
	}

	.headerDecor {
		display: grid;
		place-items: start;
		opacity: 0.95;
	}

	.headerDecor svg {
		width: min(240px, 30vw);
		height: auto;
	}

	.headerDecor.right svg {
		transform: scaleX(-1);
	}

	@media (max-width: 720px) {
		.header {
			grid-template-columns: 1fr;
		}
		.headerDecor {
			display: none;
		}
		.microNav {
			margin-bottom: 8px;
		}
	}
</style>

